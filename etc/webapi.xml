<?xml version="1.0"?>

<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/product/getByVPN/:vpn" method="GET">
        <service class="Testm\CustomCatalog\Api\CustomCatalogInterface" method="getByVPN"/>
        <resources>
            <resource ref="Testm_CustomCatalog::products"/>
        </resources>
    </route>
    <route url="/V1/product/update" method="PUT">
        <service class="Testm\CustomCatalog\Api\CustomCatalogInterface" method="save"/>
        <resources>
            <resource ref="Testm_CustomCatalog::products"/>
        </resources>
    </route>
</routes>
